<Page x:Class="CRUDWPF.Views.Pages.Action"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRUDWPF.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Action">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
           
            <TextBlock Text="Name"/>
            <TextBox Width="250" Text="{Binding Product.Name}"/>
            <TextBlock Text="DateManufacture"/>
            <DatePicker SelectedDate="{Binding Product.DateManufacture}"/>
            <TextBlock Text="ShelfLife"/>
            <DatePicker SelectedDate="{Binding Product.ShelfLife}"/>
            <TextBlock Text="Article"/>
            <TextBox Text="{Binding Product.Article}"/>
            <Button Content="Сохранить" Margin="0,10,0,0" Name="Savebtn" Click="Savebtn_Click_1"/>
        </StackPanel>
    </Grid>
</Page>
